modules = ["bun-1.1", "nodejs-20", "python-3.11", "web"]
run = "node index.js"

[nix]
channel = "stable-24_05"
packages = ["ruby_3_3"]

[deployment]
run = ["sh", "-c", "node index.js"]

[[ports]]
localPort = 4000
externalPort = 80

[[ports]]
localPort = 5000
externalPort = 80

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Jekyll Server"

[[workflows.workflow]]
name = "Jekyll Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace && bundle exec jekyll serve --host 0.0.0.0 --port 5000 --trace"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"
